<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.amma.bharadwaj.myapplication"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="22" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.amma.bharadwaj.myapplication.SplashScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.amma.bharadwaj.myapplication.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.amma.bharadwaj.myapplication.ticketGeneratorActivity"
            android:label="@string/title_activity_ticket_generator"
            android:parentActivityName="com.amma.bharadwaj.myapplication.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.amma.bharadwaj.myapplication.MainActivity" />
        </activity>
        <activity
            android:name="com.amma.bharadwaj.myapplication.gameBoardGeneratorActivity"
            android:label="@string/title_activity_game_board_generator"
            android:parentActivityName="com.amma.bharadwaj.myapplication.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.amma.bharadwaj.myapplication.MainActivity" />
        </activity>
        <activity
            android:name="com.amma.bharadwaj.myapplication.ticketBookGeneratorActivity"
            android:label="@string/title_activity_ticket_book_generator"
            android:parentActivityName="com.amma.bharadwaj.myapplication.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.amma.bharadwaj.myapplication.MainActivity" />
        </activity>
    </application>

</manifest>